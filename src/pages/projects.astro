---
import MainLayout from "@/layouts/MainLayout.astro"
import PostProject from "@/components/postProject.astro"
const allPosts = await Astro.glob("./projects/*.md");
---
<MainLayout title="Portafolio">
	<div class="flex flex-col h-screen justify-center bg-fixed bg-image bg-no-repeat bg-cover">
		<div class="text-center text-white">
			<h1 class="font-bold text-6xl">Projects</h1>
			<section class="container" aria-label="New Blog Posts">
				<div class="post-container">
				{allPosts.slice(0, 4).map((post) => (
				<PostProject frontmatter={post.frontmatter} />
				))}
				</div>
			</section>
		</div>				
	</div>
</MainLayout>

