---
import MainHtml from "@/layouts/MainHtml.astro";
import PostProject from "@/components/postProject.astro";
const allPosts = await Astro.glob("./projects/*.md");
---

<MainHtml title="Portafolio">
  <div
    class="flex flex-col sm:h-screen bg-scroll bg-image bg-no-repeat bg-cover lg:justify-center"
  >
    <div class="text-center text-blue-400 max-sm:pb-5">
      <h1 class="font-bold text-7xl lg:mt-10 max-lg:mt-20 max-sm:text-6xl">
        Projects
      </h1>
      <section
        class="container max-xl:mt-10 lg:mt-14 md:mt-14"
        aria-label="New Blog Posts"
      >
        <div class="grid xl:grid-cols-4 lg:grid-cols-3 sm:grid-cols-2 gap-3">
          {
            allPosts
              .slice(0, 6)
              .map((post) => <PostProject frontmatter={post.frontmatter} />)
          }
        </div>
      </section>
    </div>
  </div>
</MainHtml>
